{% extends "layout.njk" %}

{% block content %}
<section class="search-products container">

    <aside>
        <div class="header">
            <h2>Computador</h2>
            <p>12 encontrados</p>
        </div>

        <nav class="categories">
            <h4>Categorias</h4>
            <ul>
                <li><a href="#">Eletronicos</a></li>
                <li><a href="#">Comida</a></li>
            </ul>
        </nav>
    </aside>

    <div class="items">

        {%for product in products%}
            <div class="product">
                <div
                    class="image"
                    style="background-image: url({{product.img if product.img else '//placehold.it/500x500'}})"
                >
                </div>
                {%if product.oldPrice != product.price%}
                    <div class="old-price">{{product.oldPrice}}</div>
                {%endif%}
                    <p>{{product.price}}</p>
                    <h4>{{product.name}}</h4>
                    
                    <a href="/products/{{product.id}}" class="button">Ver produto</a>
                    </div>

        {%endfor%}
    </div>
</section>

{% endblock %}